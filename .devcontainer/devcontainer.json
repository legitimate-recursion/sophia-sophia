{
  "name": "Node.js Chatbot Server",
  // Use the standard Node.js dev container image
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "server.js",
        "index.html",
        "app.js"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },

  // Runs *after* the container is created, but before you connect
  "postCreateCommand": "npm install",

  // Runs *after* you attach to the container (e.g., when VS Code opens)
  "postAttachCommand": "npm start",

  "portsAttributes": {
    "3000": {
      "label": "Application Server",
      "onAutoForward": "notify",
      // This is the line that makes the port public by default
      "visibility": "public"
    }
  },

  // Forward the port your Express server runs on
  "forwardPorts": [
    3000
  ]
}